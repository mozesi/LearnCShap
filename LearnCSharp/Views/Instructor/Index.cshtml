
@model IEnumerable<Instructor>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h1>
        List of instructors
    </h1>
    <a asp-action="Add">Add new instructor</a>
    <table>
        <thead>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Rank</th>
        <th>edit</th>
            <th>more</th>
        </thead>
        <tbody>
            @if(Model.Count() > 0){
                @foreach (var instructor in Model)
                {
                <tr>
                    <td>@instructor.FirstName</td>
                    <td>@instructor.LastName</td>
                    <td>@Html.ActionLink("View Details", "ShowDetails", new { id = @instructor.Id })</td>
                    <td><a asp-action="Edit" asp-route-id="@instructor.Id">Edit record</a></td>
                    <td> <a asp-action="ShowDetails" asp-route-id="@instructor.Id">Details</a> </td>
                </tr>
                }
            }else{
            <p> No datat</p>
            }

        </tbody>

    </table>
</body>
</html>
